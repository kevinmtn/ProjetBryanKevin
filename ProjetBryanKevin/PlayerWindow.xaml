<Window x:Class="ProjetBryanKevin.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetBryanKevin"
        mc:Ignorable="d"
        Title="PlayerWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Background="#FF86726B" Height="440">
                <MenuItem Header="_Se déconnecter" Click="menuDisconnect" Foreground="White" Height="32" FontSize="15">
                </MenuItem>
                <MenuItem Header="_Options" Foreground="White" FontSize="15">
                    <MenuItem Header="_Accueil" Click="menuHome" Foreground="Black"/>
                    <MenuItem Header="_Voir les jeux disponibles" Click ="seeVideoGames" Foreground="Black"/>
                    <MenuItem Header="_Emprunter un jeux"  Click="borrowVideoGame" Foreground="Black"/>
                    <MenuItem Header="_Preter un jeux" Click="lendVideoGame" Foreground="Black"/>
                    <MenuItem Header="_Mes réservations"  Click="booking" Foreground="Black"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Frame Name="Main" Margin="0,36,0,0" NavigationUIVisibility="Hidden" Background="#FFBFBFBF" />
    </Grid>
</Window>
